<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tmc_Explorer2.questions.LESSON2">
    <RelativeLayout
        android:id="@+id/relativeLayout_ScrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-70dp"
            app:srcCompat="@drawable/exp2_swatch"/>

        <!-- AYO JAWAB -->
        <RelativeLayout
            android:id="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">
            <ImageView
                android:id="@+id/ayojawab"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ayojawab"
                />

            <!--    question page 1-->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@id/ayojawab">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MultipleChoiceQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/EXPLORER2_questionpage2_question1"
                    android:justificationMode="inter_word"
                    android:textSize="20sp"
                    />
                <RadioGroup
                    android:id="@+id/radioGroup_QuestionPage2_MultipleChoiceQuestion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_QuestionPage2_MultipleChoiceQuestion1">
                    <RadioButton
                        android:id="@+id/radioButton_questionpage2_answer_1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_1a" />
                    <RadioButton
                        android:id="@+id/radioButton_questionpage2_answer_1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_1b"  />
                </RadioGroup>
            </RelativeLayout>

            <!--    question page 2-->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer1">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MultipleChoiceQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/EXPLORER2_questionpage2_question2"
                    android:justificationMode="inter_word"
                    android:textSize="20sp" />
                <RadioGroup
                    android:id="@+id/radioGroup_QuestionPage2_MultipleChoiceQuestion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_QuestionPage2_MultipleChoiceQuestion2">
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_2a" />
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_2b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_2b"  />
                </RadioGroup>
            </RelativeLayout>


            <!--    question page 3-->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer2">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MultipleChoiceQuestion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/EXPLORER2_questionpage2_question3"
                    android:justificationMode="inter_word"
                    android:textSize="20sp" />
                <RadioGroup
                    android:id="@+id/radioGroup_QuestionPage2_MultipleChoiceQuestion3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_QuestionPage2_MultipleChoiceQuestion3">
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_3a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_3a" />
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_3b"  />
                </RadioGroup>
            </RelativeLayout>



            <!--    question page 4-->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer3">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MultipleChoiceQuestion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/EXPLORER2_questionpage2_question4"
                    android:justificationMode="inter_word"
                    android:textSize="20sp" />
                <RadioGroup
                    android:id="@+id/radioGroup_QuestionPage2_MultipleChoiceQuestion4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_QuestionPage2_MultipleChoiceQuestion4">
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_4a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_4a" />
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_4b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_4b" />
                </RadioGroup>
            </RelativeLayout>




            <!--    question page 5-->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer4">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MultipleChoiceQuestion5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/EXPLORER2_questionpage2_question5"
                    android:justificationMode="inter_word"
                    android:textSize="20sp" />
                <RadioGroup
                    android:id="@+id/radioGroup_QuestionPage2_MultipleChoiceQuestion5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_QuestionPage2_MultipleChoiceQuestion5">
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_5a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_5a" />
                    <RadioButton
                        android:id="@+id/radioButton_questionpage9_answer_5b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EXPLORER2_questionpage2_answer_5b" />
                </RadioGroup>
            </RelativeLayout>

            <Button
                android:id="@+id/button_CheckAnswer_QuestionsPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="#fbe087"
                android:textColor="#000000"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MultipleChoiceContainer5" />
        </RelativeLayout>

        <!-- MY JOURNEY WITH JESUS LESSON 1 -->
        <RelativeLayout
            android:id="@+id/relativeLayout_QuestionPage2_MJWJContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout_QuestionPage2_MultipleChoiceContainer">
            <ImageView
                android:id="@+id/MJWJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/exp1_mjwj"
                />

            <!-- My Journey With Jesus Question 1 -->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MJWJContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/MJWJ">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MJWJQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MJWJ1_question1"
                    android:textSize="@dimen/MJWJQuestion"/>
                <EditText
                    android:id="@+id/editText_QuestionPage2_MJWJAnswer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_QuestionPage2_MJWJQuestion1"
                    android:textSize="@dimen/MJWJAnswer"/>
            </RelativeLayout>

            <!-- My Journey With Jesus Question 2 -->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MJWJContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MJWJContainer1">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MJWJQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MJWJ1_question2"
                    android:textSize="@dimen/MJWJQuestion"/>
                <EditText
                    android:id="@+id/editText_QuestionPage2_MJWJAnswer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_QuestionPage2_MJWJQuestion2"
                    android:textSize="@dimen/MJWJAnswer"/>
            </RelativeLayout>


            <!-- My Journey With Jesus Question 3 -->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MJWJContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MJWJContainer2">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MJWJQuestion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MJWJ1_question3"
                    android:textSize="@dimen/MJWJQuestion"/>
                <EditText
                    android:id="@+id/editText_QuestionPage2_MJWJAnswer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_QuestionPage2_MJWJQuestion3"
                    android:textSize="@dimen/MJWJAnswer"/>
            </RelativeLayout>


            <!-- My Journey With Jesus Question 4 -->
            <RelativeLayout
                android:id="@+id/relativeLayout_QuestionPage2_MJWJContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_QuestionPage2_MJWJContainer3">
                <TextView
                    android:id="@+id/textView_QuestionPage2_MJWJQuestion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MJWJ1_question4"
                    android:textSize="@dimen/MJWJQuestion"/>
                <EditText
                    android:id="@+id/editText_QuestionPage2_MJWJAnswer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_QuestionPage2_MJWJQuestion4"
                    android:textSize="@dimen/MJWJAnswer"/>
            </RelativeLayout>
            <Button
                android:id="@+id/button_CheckAnswer_MJWJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="#fbe087"
                android:textColor="#000000"
                android:layout_below="@id/relativeLayout_QuestionPage2_MJWJContainer4" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>