<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.Question1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-65dp"
            app:srcCompat="@drawable/swatch"/>
        <ImageView
            android:id="@+id/treasurehunt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/treasurehunt_1"/>
        <EditText
            android:id="@+id/answer_treasurehunt"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="jawab kode rahasia disini"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="16dp"
            android:gravity="center"
            android:background="@drawable/paper_box"
            android:layout_below="@+id/treasurehunt_1"/>
        <Button
            android:id="@+id/check_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer_treasurehunt"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#fbe087"
            android:textColor="#000000"
            android:text="OK" />
    </RelativeLayout>
</ScrollView>