<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.tmc_SeeAndDo2.questions.LESSON2">
    <RelativeLayout
        android:id="@+id/relativeLayout_ScrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    QUESTION CONTAINER-->
        <ImageView
            android:id="@+id/title_ayojawab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            app:srcCompat="@drawable/ayo_jawab_sd1" />

        <RelativeLayout
            android:id="@+id/relativeLayout_questionContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_ayojawab"
            android:layout_marginTop="-90dp">
            <!--question1-->
            <RelativeLayout
                android:id="@+id/relativeLayout_questionContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer">
                <TextView
                    android:id="@id/textView_question1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="1. Ken tidak bisa bermain diluar karena:"/>
                <RadioGroup
                    android:id="@+id/radioGroup_question1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView_question1">
                    <RadioButton
                        android:id="@+id/radioButton_question1_answer_1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Karena sedang hujan"
                        android:drawableRight="@drawable/xml_rain"
                        />
                    <RadioButton
                        android:id="@+id/radioButton_question1_answer_1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Karena dingin"
                        />
                </RadioGroup>
            </RelativeLayout>

            <!--question2-->
            <RelativeLayout
                android:id="@+id/relativeLayout_questionContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_questionContainer1">
                <TextView
                    android:id="@+id/textView_question2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="2. Ibu melarang Ken bermain di kubangan lumpur"/>
                <RadioGroup
                    android:id="@+id/radioGroup_question2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_question2">
                    <RadioButton
                        android:id="@+id/radioButton_question2_answer_2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ken taat"
                        />
                    <RadioButton
                        android:id="@+id/radioButton_question2_answer_2b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ken tidak taat"/>
                </RadioGroup>
            </RelativeLayout>

            <!--question3-->
            <RelativeLayout
                android:id="@+id/relativeLayout_questionContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_questionContainer2">
                <TextView
                    android:id="@+id/textView_question3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="3. Ken mengenakan piyama dan pergi tidur"/>
                <RadioGroup
                    android:id="@+id/radioGroup_question3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_question3">
                    <RadioButton
                        android:id="@+id/radioButton_question3_answer_3a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Selama dua jam"
                        />
                    <RadioButton
                        android:id="@+id/radioButton_question3_answer_3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Seharian"/>
                </RadioGroup>
            </RelativeLayout>

            <!--question4-->
            <RelativeLayout
                android:id="@+id/relativeLayout_questionContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_questionContainer3">
                <TextView
                    android:id="@+id/textView_question4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Alkitab berkata jika kita mengakui kesalahan kita kepada Tuhan, maka"/>
                <RadioGroup
                    android:id="@+id/radioGroup_question4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_question4">
                    <RadioButton
                        android:id="@+id/radioButton_question4_answer_4a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tuhan mengampuni"
                        />
                    <RadioButton
                        android:id="@+id/radioButton_question4_answer4b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tuhan tidak mengampuni"
                        />
                </RadioGroup>
            </RelativeLayout>

            <!--question5-->
            <RelativeLayout
                android:id="@+id/relativeLayout_questionContainer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/MultipleChoiceContainer"
                android:layout_below="@+id/relativeLayout_questionContainer4">
                <TextView
                    android:id="@+id/textView_question5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="5. Ketika kita tidak taat kepada orang tua kita, kita harus" />
                <RadioGroup
                    android:id="@+id/radioGroup_question5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/textView_question5">
                    <RadioButton
                        android:id="@+id/radioButton_question5_answer_5a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Terus berusaha agar orang tua tidak mengetahui kesalahan kita"
                        />
                    <RadioButton
                        android:id="@+id/radioButton_question5_answer_5b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Memohon pengampunan pada Tuhan, dan kepada orang tua kita"
                        />
                </RadioGroup>
            </RelativeLayout>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bible_verse_sd2_2"
                android:layout_marginVertical="30dp"
                android:layout_below="@+id/relativeLayout_questionContainer5"/>

        </RelativeLayout>

        <Button
            android:id="@+id/button_CheckAnswer_QuestionsPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#fbe087"
            android:textColor="#000000"
            android:layout_below="@+id/relativeLayout_questionContainer" />
    </RelativeLayout>
</ScrollView>