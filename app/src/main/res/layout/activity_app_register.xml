<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tmcindonesia.application.RegisterPage.RegisterActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_RegisterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            android:scaleType="fitXY"
            android:src="@drawable/backplate_long" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tmcnewlogo" />

        <!-- EMAIL -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_email"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            app:hintTextColor="#ec1b30"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEmailRegister"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PASSWORD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_password"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            app:hintTextColor="#ec1b30"
            android:layout_below="@id/TextInputLayout_email"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPasswordRegister"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CONFRIM PASSWORD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_confirmpassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Ulangi password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            app:hintTextColor="#ec1b30"
            android:layout_below="@id/TextInputLayout_password"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextConfirmPasswordRegister"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>



        <!-- USER NAME -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_username"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Nama Lengkap"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            app:hintTextColor="#ec1b30"
            android:layout_below="@id/TextInputLayout_confirmpassword"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextUserNameRegister"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- PHONE NUMBER -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_phone"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Nomor Hand Phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            app:hintTextColor="#ec1b30"
            android:layout_below="@id/TextInputLayout_username"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextUserPhone"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BIRTH DATE -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_birthDate"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Tanggal lahir"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/TextInputLayout_phone"
            android:focusable="false"
            app:hintTextColor="#ec1b30">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDateBirth"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:focusable="false"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- CITY -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_city"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Kota / Kabupaten"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/TextInputLayout_birthDate"
            app:hintTextColor="#ec1b30"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCityRegister"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- PROVINCE -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_province"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Provinsi"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_below="@id/TextInputLayout_city"
            android:layout_centerHorizontal="true"
            app:hintTextColor="#ec1b30"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextProvinceRegister"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- INSTITUTION -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout_institution"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#ec1b30"
            android:hint="Institutsi (Sekolah / Gereja / STT)"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_below="@id/TextInputLayout_province"
            android:layout_centerHorizontal="true"
            app:hintTextColor="#ec1b30"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextInstitutionRegister"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </com.google.android.material.textfield.TextInputLayout>

